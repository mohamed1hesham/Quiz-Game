<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Questionslvl0">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        android:background="@drawable/backgroundlvl2"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="97dp"
            android:orientation="horizontal"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textQuesNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:fontFamily="serif"
                android:gravity="center"
                android:layout_marginLeft="120dp"
                android:text="Question : 1/n"
                android:textColor="@color/white"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/timer1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:gravity="left"
                android:text="timer" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textQues"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/Orange"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:text="Questions" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="201dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:gravity="right"
                android:text="Score: 0"
                android:textSize="20dp"
                android:textColor="@color/background"
                android:textStyle="bold" />
        </LinearLayout>


        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioGroup"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center"
            >
            <RadioButton
                android:id="@+id/b1"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Answer1"
                android:gravity="center"

                android:textSize="18dp"

                android:background="@drawable/radiolvl2"
                android:padding="12dp"
                android:layout_marginBottom="16dp"
                />
            <RadioButton
                android:id="@+id/b2"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Answer2"
                android:textSize="18dp"

                android:background="@drawable/radiolvl2"
                android:gravity="center"

                android:padding="12dp"
                android:layout_margin="16dp"/>
            <RadioButton
                android:id="@+id/b3"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/radiolvl2"

                android:textSize="18dp"
                android:elevation="4dp"
                android:text="Answer3"
                android:padding="12dp"
                android:layout_margin="16dp"/>


        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/backbtn2"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@drawable/roundedbtn6"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:text="Back"
                android:onClick="backlvl"
                />

            <Button
                android:id="@+id/nextbtn"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@drawable/roundedbtn7"
                android:layout_gravity="left"
                android:text="Next" />
        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>